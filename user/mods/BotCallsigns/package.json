{
    "name": "BotCallsigns",
    "version": "1.1.1",
    "main": "src/mod.js",
    "license": "MIT",
    "author": "Helldiver",
    "sptVersion": "3.9.x",
    "scripts": {
        "build": "npm run build:clean && npm run build:distribution && npm run build:compress",
        "build:clean": "shx rm -f WeaponPropMod.zip && shx rm -rf ./dist",
        "build:distribution": "copyfiles -e \"./node_modules/**/*.*\" -e \"./dist/**/*.*\" -e \"./package-lock.json\" -e \"./tsconfig.json\" -e \"./README.txt\" -e \"./mod.code-workspace\" \"./**/*.*\" ./dist",
        "build:compress": "shx mv dist WeaponPropMod && bestzip WeaponPropMod.zip WeaponPropMod && shx mv WeaponPropMod dist"
    },
    "devDependencies": {
        "@types/node": "^14.15.3",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "copyfiles": "2.4.1",
        "eslint": "7.26.0",
        "shx": "^0.3.4",
        "tsyringe": "4.6.0",
        "typescript": "4.6.4",
        "bestzip": "2.2.1"
    }
}
